{
  "name": "Remote Backup Edge",
  "version": "4.3.6",
  "slug": "remote_backup",
  "description": "Automatically create and backup HA snapshots using SCP",
  "url": "https://github.com/ldb2000/Addon-RemoteBackup/blob/master/README.md",
  "startup": "once",
  "image": "ldb2000/remotebackup-{arch}",
  "boot": "manual",
  "arch": [
    "aarch64",
    "amd64",
    "armhf",
    "armv7",
    "i386"
  ],
  "hassio_api": true,
  "hassio_role": "manager",
  "map": ["config", "addons", "share", "ssl", "backup:rw"],
  "options": {
    "ssh_enabled": true,
    "ssh_host": "",
    "ssh_port": 22,
    "ssh_user": "",
    "ssh_key": "",
    "remote_directory": "",
    "zip_password": "",
    "keep_local_backup": "",
    "rsync_enabled": false,
    "rsync_host": "",
    "rsync_rootfolder": "hassio-sync",
    "rsync_user": "",
    "rsync_password": ""
  },
  "schema": {
    "ssh_enabled": "bool",
    "ssh_host": "str",
    "ssh_port": "int",
    "ssh_user": "str",
    "ssh_key": "str",
    "remote_directory": "str",
    "zip_password": "str",
    "keep_local_backup": "match(^(all|[+]?\\d*)$)",
    "rsync_enabled": "bool",
    "rsync_host": "str",
    "rsync_rootfolder": "str",
    "rsync_user": "str",
    "rsync_password": "str"
  }
}
